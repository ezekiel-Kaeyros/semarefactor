{
    "compilerOptions": {
      "target": "ES6",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["reflect-metadata", "jest"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
  